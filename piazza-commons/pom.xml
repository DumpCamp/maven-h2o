	<artifactId>piazza-commons</artifactId>
	<name>Piazza Commons</name>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-install-plugin</artifactId>
				<executions>
					<execution>
						<id>wrapper</id>
						<phase>pre-clean</phase>
						<goals>
							<goal>install-file</goal>
						</goals>
						<configuration>
							<file>lib/wrapper-3.3.7.jar</file>
							<groupId>wrapper</groupId>
							<artifactId>wrapper</artifactId>
							<version>3.3.7</version>
							<packaging>jar</packaging>
						</configuration>
					</execution>	
					<execution>
						<id>oracle</id>
						<phase>pre-clean</phase>
						<goals>
							<goal>install-file</goal>
						</goals>
						<configuration>
							<file>lib/ojdbc14-10.2.0.1.0.jar</file>
							<groupId>oracle</groupId>
							<artifactId>ojdbc14</artifactId>
							<version>10.2.0.1.0</version>
							<packaging>jar</packaging>
						</configuration>
					</execution>									
				</executions>
			</plugin>			
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<excludes>
						<exclude>META-INF/ejb-jar.xml</exclude>
					</excludes>
				</configuration>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ejb-plugin</artifactId>
				<configuration>
					<classifier>ejb</classifier>
				</configuration>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>ejb</goal>
						</goals>
					</execution>
				</executions>
			</plugin>			
		</plugins>		
	</build>
