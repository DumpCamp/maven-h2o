										</copy>
										<copy todir="${embedded_h2o.path}/sample/config/ebms-send">
											<fileset dir="config/ebms-send" />
										</copy>
										<copy file="config/as2-partnership.xml" todir="${embedded_h2o.path}/sample/config" />
										<copy file="config/ebms-partnership.xml" todir="${embedded_h2o.path}/sample/config" />
										
										<!-- Copy the scripts to the embedded h2o folder -->
										<copy file="script/as2-envelop.bat" todir="${embedded_h2o.path}/sample" />
										<copy file="script/as2-envelop.sh" todir="${embedded_h2o.path}/sample" />
										<copy file="script/as2-history.bat" todir="${embedded_h2o.path}/sample" />
										<copy file="script/as2-history.sh" todir="${embedded_h2o.path}/sample" />
										<copy file="script/as2-partnership.bat" todir="${embedded_h2o.path}/sample" />
										<copy file="script/as2-partnership.sh" todir="${embedded_h2o.path}/sample" />
										<copy file="script/as2-send.bat" todir="${embedded_h2o.path}/sample" />
										<copy file="script/as2-send.sh" todir="${embedded_h2o.path}/sample" />
