											<fileset dir="config/as2-envelop" />
										</copy>
										<copy todir="${h2o_installer.path}/sample/config/as2-history">
											<fileset dir="config/as2-history" />
										</copy>
										<copy todir="${h2o_installer.path}/sample/config/as2-partnership">
											<fileset dir="config/as2-partnership" />
										</copy>
										<copy todir="${h2o_installer.path}/sample/config/as2-send">
											<fileset dir="config/as2-send" />
										</copy>
										<copy todir="${h2o_installer.path}/sample/config/ebms-envelop">
											<fileset dir="config/ebms-envelop" />
										</copy>
										<copy todir="${h2o_installer.path}/sample/config/ebms-history">
											<fileset dir="config/ebms-history" />
										</copy>
										<copy todir="${h2o_installer.path}/sample/config/ebms-partnership">
											<fileset dir="config/ebms-partnership" />
										</copy>
										<copy todir="${h2o_installer.path}/sample/config/ebms-send">
											<fileset dir="config/ebms-send" />
										</copy>
										<copy file="config/as2-partnership.xml" todir="${h2o_installer.path}/sample/config" />
										<copy file="config/ebms-partnership.xml" todir="${h2o_installer.path}/sample/config" />
										
										<!-- Copy the scripts to the h2o installer folder -->
										<copy file="script/as2-envelop.bat" todir="${h2o_installer.path}/sample" />
										<copy file="script/as2-envelop.sh" todir="${h2o_installer.path}/sample" />
										<copy file="script/as2-history.bat" todir="${h2o_installer.path}/sample" />
										<copy file="script/as2-history.sh" todir="${h2o_installer.path}/sample" />
										<copy file="script/as2-partnership.bat" todir="${h2o_installer.path}/sample" />
										<copy file="script/as2-partnership.sh" todir="${h2o_installer.path}/sample" />
										<copy file="script/as2-send.bat" todir="${h2o_installer.path}/sample" />
										<copy file="script/as2-send.sh" todir="${h2o_installer.path}/sample" />
										<copy file="script/ebms-envelop.bat" todir="${h2o_installer.path}/sample" />
										<copy file="script/ebms-envelop.sh" todir="${h2o_installer.path}/sample" />
										<copy file="script/ebms-history.bat" todir="${h2o_installer.path}/sample" />
										<copy file="script/ebms-history.sh" todir="${h2o_installer.path}/sample" />
										<copy file="script/ebms-partnership.bat" todir="${h2o_installer.path}/sample" />
										<copy file="script/ebms-partnership.sh" todir="${h2o_installer.path}/sample" />
										<copy file="script/ebms-send.bat" todir="${h2o_installer.path}/sample" />
										<copy file="script/ebms-send.sh" todir="${h2o_installer.path}/sample" />
										<copy file="script/set-classpath.bat" todir="${h2o_installer.path}/sample" />
										
										<zip destfile="${h2o_installer.path}/hermes2_javadoc.zip"
											basedir="${h2o_installer.path}/javadoc"
										/>
										
										<zip destfile="${h2o_installer.path}/hermes2_bin.zip"
											basedir="${h2o_installer.path}"
											excludes="ant-installer/**, javadoc/**, src/**, hermes2_javadoc.zip"
										/>
										
										<zip destfile="${h2o_installer.path}/hermes2_src.zip"
											basedir="${h2o_installer.path}/src"
										/>
										
										<!-- add the ant tasks from ant installer -->
										<taskdef name="installer" classname="org.tp23.antinstaller.taskdefs.Installer" />
										
										<!-- build the installer -->
										<installer file="${h2o_installer.path}/hermes2_installer.jar" compress="true"
											extractType="SelfExtractor"
											installConfig="${h2o_installer.path}/ant-installer/antinstall-config.xml"
											buildFile="${h2o_installer.path}/ant-installer/build.xml"
											antInstallLib="${h2o_installer.path}/ant-installer/lib"
											antLib="${h2o_installer.path}/ant-installer/antlib"
											validateConfig="true"
											failOnError="true">
											<fileset dir="${h2o_installer.path}" includes="hermes2_bin.zip"/>
											<fileset dir="${h2o_installer.path}/ant-installer" includes="resources/*"/>
											<fileset dir="${h2o_installer.path}/ant-installer" includes="resources/lib/*"/>
											<fileset dir="${h2o_installer.path}/ant-installer" includes="resources/icons/*"/>
										</installer>
									</then>
								</if>
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	
