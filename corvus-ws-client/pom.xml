										<copy file="script/as2-envelop.sh" todir="${local_installer.path}/sample" />
										<copy file="script/as2-history.bat" todir="${local_installer.path}/sample" />
										<copy file="script/as2-history.sh" todir="${local_installer.path}/sample" />
										<copy file="script/as2-partnership.bat" todir="${local_installer.path}/sample" />
