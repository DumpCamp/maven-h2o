										<copy file="script/as2-send.sh" todir="${local_installer.path}/sample" />
										<copy file="script/ebms-envelop.bat" todir="${local_installer.path}/sample" />
										<copy file="script/ebms-envelop.sh" todir="${local_installer.path}/sample" />
										<copy file="script/ebms-history.bat" todir="${local_installer.path}/sample" />
										<copy file="script/ebms-history.sh" todir="${local_installer.path}/sample" />
										<copy file="script/ebms-partnership.bat" todir="${local_installer.path}/sample" />
										<copy file="script/ebms-partnership.sh" todir="${local_installer.path}/sample" />
										<copy file="script/ebms-send.bat" todir="${local_installer.path}/sample" />
										<copy file="script/ebms-send.sh" todir="${local_installer.path}/sample" />
										<copy file="script/set-classpath.bat" todir="${local_installer.path}/sample" />
