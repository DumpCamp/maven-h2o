										</copy>
										<copy todir="${embedded_h2o.path}/sample/config/as2-history">
											<fileset dir="config/as2-history" />
										</copy>
										<copy todir="${embedded_h2o.path}/sample/config/as2-partnership">
											<fileset dir="config/as2-partnership" />
										</copy>
										<copy todir="${embedded_h2o.path}/sample/config/as2-send">
											<fileset dir="config/as2-send" />
										</copy>
										<copy todir="${embedded_h2o.path}/sample/config/ebms-envelop">
											<fileset dir="config/ebms-envelop" />
										</copy>
										<copy todir="${embedded_h2o.path}/sample/config/ebms-history">
											<fileset dir="config/ebms-history" />
										</copy>
										<copy todir="${embedded_h2o.path}/sample/config/ebms-partnership">
